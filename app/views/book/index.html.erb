<h1>Listing Book</h1>
 
<table class="table">
  <tr>
    <th>Book title</th>
    <th>Author Name</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
 
      <td><%= book.book_title %></td>
      <td><%= Author.find(@books.first.author_id).first_name %></td>

      <td><%= link_to 'Edit', edit_author_book_path(book.author_id, book.id), :class => "btn btn-info" %></td>
        <td><%= link_to 'Destroy', author_book_path(book.author_id,book.id),
              method: :delete,
              data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>